# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=change_this_secret_key_in_production
JWT_EXPIRATION=24h

# Database (optional - defaults to ./database/catalog.db relative to server/src/config/)
# DB_PATH=./database/catalog.db

# Admin Default Credentials
ADMIN_EMAIL=admin@progressio.dev
ADMIN_PASSWORD=Admin123!

# CORS
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./server/uploads
GENERATED_DIR=./server/generated

# Product Images
PRODUCT_IMAGE_BASE_URL=https://cdn.example.com/products/
