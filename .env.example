# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=change_this_secret_key_in_production
JWT_EXPIRATION=24h

# Database (optional - defaults to ./database/catalog.db relative to server/src/config/)
# DB_PATH=./database/catalog.db

# Admin Default Credentials
ADMIN_EMAIL=admin@progressio.dev
ADMIN_PASSWORD=Admin123!

# CORS
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
# Paths are relative to server directory when running server
UPLOAD_DIR=./uploads
GENERATED_DIR=./generated

# Product Images
PRODUCT_IMAGE_BASE_URL=https://cdn.example.com/products/

# Rate Limiting
# Global limiter applied to /upload-csv and admin routes (default: 60 req/min)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60
# PDF-specific limiter for /generate-pdf and /preview to support bulk generation (default: 300 req/15min)
PDF_RATE_LIMIT_WINDOW_MS=900000
PDF_RATE_LIMIT_MAX=300
